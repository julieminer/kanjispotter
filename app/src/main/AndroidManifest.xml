<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.melonheadstudios.kanjispotter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:icon="@mipmap/search_icon"
        android:allowBackup="false"
        android:label="@string/app_name"
        tools:replace="android:allowBackup">
        <service
            android:label="@string/app_name"
            android:name=".services.JapaneseTextGrabberService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/global_action_bar_service" />
        </service>
        <service
            android:name=".services.QuickTileService"
            android:icon="@mipmap/search_icon"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>
        <service
            android:label="@string/app_name_info"
            android:name=".services.InfoPanelDisplayService"/>
    </application>
</manifest>
